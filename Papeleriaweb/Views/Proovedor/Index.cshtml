@model IEnumerable<Papeleriaweb.Models.Proovedor>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h5 class="alert alert-info text-center">
                Administración de Mercancia
            </h5>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="buscar" class="form-control" placeholder="Buscar mercancia..." />
                    <button class="btn btn-primary" type="submit">
                        <i class="fa-solid fa-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Proovedor" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Agregar Mercancia
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="alert alert-warning text-center">
                    Lista de Mercancia
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="Productos" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(p => p.Id_proveedor)</th>
                                    <th>@Html.DisplayNameFor(p => p.Nombreproveedor)</th>
                                    <th>@Html.DisplayNameFor(p => p.Direccion)</th>
                                    <th>@Html.DisplayNameFor(p => p.Marca)</th>
                                    <th>@Html.DisplayNameFor(p => p.Tipoproducto)</th>
                                    <th>@Html.DisplayNameFor(p => p.Cantidad)</th>
                                    <th>Precio Unitario</th>
                                    <th>Precio Total</th>
                                    <th>Editar</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(p => item.Id_proveedor)</td>
                                        <td>@Html.DisplayFor(p => item.Nombreproveedor)</td>
                                        <td>@Html.DisplayFor(p => item.Direccion)</td>
                                        <td>@Html.DisplayFor(p => item.Marca)</td>
                                        <td>@Html.DisplayFor(p => item.Tipoproducto)</td>
                                        <td>@Html.DisplayFor(p => item.Cantidad) unidades</td>
                                        <td>@string.Format("{0:C}", item.PrecioUnitario)</td>
                                        <td>@string.Format("{0:C}", item.PrecioTotal)</td>
                                        <td>
                                            <a class="btn btn-dark" asp-controller="Proovedor" asp-action="Edit" asp-route-id="@item.Id_proveedor">
                                                <i class="fa-solid fa-user-pen"></i> Editar
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger" asp-controller="Proovedor" asp-action="Delete" asp-route-id="@item.Id_proveedor">
                                                <i class="fa-solid fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>