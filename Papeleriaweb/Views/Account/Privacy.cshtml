@{
    ViewBag.Title = "Privacy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <h1>Privacy Policy</h1>
    <p>This is the privacy policy for PapeleriaWeb.</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <p>Please <a href="@Url.Action("Login", "Account")">login</a> to view this page.</p>
    }
    else
    {
        <p>Welcome, @User.Identity.Name! You are logged in.</p>
    }
</body>
</html>

